module;

#include <imagine/util/macros.h>

export module gui;
import imagine.gui;
import tests;

using namespace tests;

export class TestPicker : public IG::TableView
{
public:
	TestPicker(IG::ViewAttachParams attach):
		TableView{attach,	testEntry} {}

	template<class App>
	void setTests(std::span<const TestDesc> testDescs)
	{
		testEntry.clear();
		testEntry.reserve(testDescs.size());
		testParam.clear();
		testParam.reserve(testDescs.size());
		for(auto [i, desc] : std::views::zip(std::views::iota(0), testDescs))
		{
			testEntry.emplace_back(desc.name, u"", attachParams(),
				[this, i]
				{
					auto &app = appContext().applicationAs<App>();
					auto test = app.startTest(window(), testParam[i]);
					test->onTestFinished =
						[this, i](TestFramework &test)
						{
							auto diff = test.endTime - test.startTime;
							log.info("ran from {} to {}, took {}",
								test.startTime.time_since_epoch(),
								test.endTime.time_since_epoch(),
								diff);
							auto &entry = testEntry[i];
							auto fps = double(test.frames-1) / diff.count();
							entry.set2ndName(std::format("{:.2f}", fps).data());
							entry.text2Color = test.droppedFrames ? IG::Gfx::ColorName::RED : IG::Gfx::ColorName::WHITE;
						};
				});
			testParam.emplace_back(desc.params);
		}
		if(appContext().keyInputIsPresent())
			highlightCell(0);
	}

private:
	static constexpr IG::SystemLogger log{"TestPicker"};
	std::vector<IG::DualTextMenuItem> testEntry;
	std::vector<TestParams> testParam;
};
